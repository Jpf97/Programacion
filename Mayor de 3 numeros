#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

int main()
{  
    int A,B,C;  
    cout<<"Ingrese 3 numeros:" ;
    cin>>A;    
    cin>>B;   
    cin>>C;  
    if(A > B && A > C)
       cout<<"El numero mayor es:"<<A;  
       else  
           if(B > A && B > C)  
             cout<<"El numero mayor es:" <<B;  
             else  
                 cout<<"El numero mayor es:" <<C;  
            
   getch();  
}  
